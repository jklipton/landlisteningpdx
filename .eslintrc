{
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module",
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "impliedStrict": true,
        "sourceType": "script"
      }
    },
    "env": {
      "es6": true,
      "browser": true
    },
    "rules": {
        "indent": ["error", 2, { "SwitchCase": 1 }],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "space-in-parens": ["error"],
        "space-infix-ops": "error",
        "object-curly-spacing": ["error", "always"],
        "comma-spacing": "error",
        "space-before-function-paren": ["error", "never"],
        "keyword-spacing": [
          "error", 
          { 
            "before": true, 
            "after": true,
            "overrides": {
              "if": { "after": false },
              "for": { "after": false },
              "while": { "after": false },
              "do": { "after": false },
              "catch": { "after": false },
              "switch": { "after": false }
            } 
          }
        ],
        "array-bracket-spacing": "error",
        "babel/object-curly-spacing": ["error", "always"],
        "babel/no-invalid-this": 1
    }
  }